<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/itemimage"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:src="@drawable/sample_image_category"
            android:layout_width="match_parent"
            android:layout_height="260dp"/>





        <EditText
            android:text="Title"
            android:gravity="left"
            android:id="@+id/tvtitel"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:enabled="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:text="Recipe:"
                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                />
        <EditText
            android:text="Description"
            android:gravity="left"
            android:id="@+id/tvdes"
            android:layout_marginBottom="10dp"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:enabled="false"

            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:text="Cocking Time:"
                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                />
            <EditText
                android:text="Cocking Time"
                android:gravity="left"
                android:id="@+id/cocking_time"
                android:layout_marginBottom="10dp"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="datetime"


                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:text="Calories:"
                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                />
            <EditText
                android:text="Calories"
                android:gravity="left"
                android:id="@+id/meal_calo"
                android:layout_marginBottom="10dp"
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="numberDecimal"

                />
        </LinearLayout>




        <TextView
            android:text="publisher"
            android:gravity="left"
            android:id="@+id/publisher"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"

            />

        <RatingBar
            android:id="@+id/rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:numStars="5"
            android:stepSize=".3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="#2F000000"

            >



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loveit"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_love"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"

                />

            <TextView
                android:text="Likes Numbers"
                android:gravity="left"
                android:id="@+id/likes"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DeletePost"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_delete"

                android:layout_marginLeft="100dp"

                />




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/save"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_save"

                android:layout_marginLeft="15dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/EditPost"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_editpost"

                android:layout_marginLeft="15dp"

                />








        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>